{
  "name": "functions",
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rimraf lib",
    "serve": "npm run build && firebase emulators:start --only functions:api",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --force --only functions:api,firestore",
    "deploy:functions": "firebase deploy --force --only functions:api",
    "deploy:firestore": "firebase deploy --force --only firestore",
    "logs": "firebase functions:log",
    "emulators": "firebase emulators:start",
    "lint": "eslint --ext .js,.ts .",
    "test": "jest"
  },
  "engines": {
    "node": "16"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^11.0.0",
    "firebase-functions": "^3.22.0"
  },
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "dotenv": "^16.0.1",
    "eslint": "8.16.0",
    "firebase-functions-test": "^2.2.0",
    "jest": "^28.1.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.7",
    "typescript": "4.7.2"
  },
  "private": true
}
